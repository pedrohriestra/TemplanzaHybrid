@page "/"

<h1 class="mb-4">Menú principal</h1>

<div class="row g-4 row-cols-1 row-cols-md-3">
    <!-- Usuarios -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-people-fill fs-1"></i>
                <div>
                    <h5 class="card-title mb-1">Usuarios</h5>
                    <p class="card-text text-muted mb-2">ABM maestro–detalle con imágenes.</p>
                    <a class="stretched-link" href="/usuarios"></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos / Entidad de negocio -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-bag-check-fill fs-1"></i>
                <div>
                    <h5 class="card-title mb-1">Productos</h5>
                    <p class="card-text text-muted mb-2">ABM + imágenes locales.</p>
                    <a class="stretched-link" href="/productos"></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Login -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-box-arrow-in-right fs-1"></i>
                <div>
                    <h5 class="card-title mb-1">Login</h5>
                    <p class="card-text text-muted mb-2">Ingresá para acciones de admin.</p>
                    <a class="stretched-link" href="/login"></a>
                </div>
            </div>
        </div>
    </div>
</div>
